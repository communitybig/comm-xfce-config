# Function executed after package installation
post_install() {
    # Check if the [Seat:*] section exists and replace the greeter
    if grep -q '^\[Seat:\*\]' /etc/lightdm/lightdm.conf; then
        sed -i '/^\[Seat:\*\]/,/^$/ s/^#*\s*greeter-session=.*/greeter-session=lightdm-slick-greeter/' /etc/lightdm/lightdm.conf
    else
        echo -e "\n[Seat:*]\ngreeter-session=lightdm-slick-greeter" >> /etc/lightdm/lightdm.conf
    fi
}

